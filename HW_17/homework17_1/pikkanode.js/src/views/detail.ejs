
  <img src="/-/images/<%= data[0].id %>" alt="">
  <p>
    <%= data[0].caption %>
    Create by: 
    <%= data[0].email %>
  </p>

  <form name="like" action="/pikka/<%= data[0].id %>/like" method="POST">
    <input type="submit" value="Like">
  </form>


  <form action="/pikka/<%= data[0].id %>/comment" method="POST">
    <textarea name="comment" rows="5" cols="100"></textarea>
    <input type="submit" value="Comment">
  </form>

  <h3>COMMENT: </h3>
  <% data.forEach((img) => {%>
  <p>
    <% if(img.text !== null) {%>
      <%= img.text %>
    <%} else {%>
      none
    <%}%>
  </p>
  <%})%>

